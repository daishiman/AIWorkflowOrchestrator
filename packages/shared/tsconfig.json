{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "index.ts",
    "core/**/*.ts",
    "infrastructure/**/*.ts",
    "types/**/*.ts",
    "src/**/*.ts",
    "utils/**/*.ts",
    "schemas/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
